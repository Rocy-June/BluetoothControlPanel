<Button x:Class="BluetoothControlPanel.UI.Controls.DeviceItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:BluetoothControlPanel.UI.Controls"
        xmlns:proxy="clr-namespace:BluetoothControlPanel.UI.Proxy"
        mc:Ignorable="d"
        Focusable="True"
        IsTabStop="True"
        Padding="0"
        OverridesDefaultStyle="True"
        Background="Transparent"
        BorderThickness="0"
        VerticalContentAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        d:DesignWidth="600" d:DesignHeight="60">

    <Button.Template>
        <ControlTemplate TargetType="{x:Type Button}">
            <ContentPresenter />
        </ControlTemplate>
    </Button.Template>

    <Button.Resources>

        <proxy:BindingProxy x:Key="AccentDark1BrushProxy" Data="{DynamicResource AccentDark1Brush}" />
        <proxy:BindingProxy x:Key="AccentLight1BrushProxy" Data="{DynamicResource AccentLight1Brush}" />

        <Style x:Key="DeviceBorder" TargetType="Border">
            <Setter Property="Height" Value="60" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Background" Value="{DynamicResource AccentDark1Brush}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <MultiBinding Converter="{StaticResource BrightnessBrushFilterConverter}">
                                <Binding Source="{StaticResource AccentDark1BrushProxy}" Path="Data" />
                                <Binding>
                                    <Binding.Source>
                                        <sys:Double>1.2</sys:Double>
                                    </Binding.Source>
                                </Binding>
                            </MultiBinding>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <DataTrigger 
                    Binding="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource AncestorType=local:DeviceItem}}" 
                    Value="True">
                    
                    <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
                    <Setter Property="Height" Value="106" />
                    
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LineBorder" TargetType="Border">
            <Setter Property="Padding" Value="10,0,10,10" />
        </Style>

        <Style x:Key="DetailLineBorder" TargetType="Border">
            <Setter Property="Padding" Value="10" />
            <Setter Property="Visibility" Value="Collapsed" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource AncestorType=local:DeviceItem}}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LineGrid" TargetType="Grid">
            <Setter Property="Height" Value="40" />
        </Style>

        <Style x:Key="DeviceIconGrid" TargetType="Grid">
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="Background" Value="{DynamicResource TextBaseBrush}" />
        </Style>

        <Style x:Key="DeviceName" TargetType="TextBlock" BasedOn="{StaticResource TextBase}">
            <Setter Property="FontSize" Value="10pt" />
            <Setter Property="Margin" Value="0,5,0,0" />
        </Style>

        <Style x:Key="ConnectState" TargetType="TextBlock" BasedOn="{StaticResource TextBase}">
            <Setter Property="FontSize" Value="12pt" />
            <Setter Property="Foreground" Value="{DynamicResource TextSubBrush}" />
        </Style>

        <Style x:Key="BatteryGrid" TargetType="Grid">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Device.BatteryLevel, RelativeSource={RelativeSource AncestorType=local:DeviceItem}}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Hidden" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BatteryIconGrid" TargetType="Grid">
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
            <Setter Property="Background" Value="{DynamicResource TextBaseBrush}" />
            <Setter Property="Margin" Value="0,10,0,0" />
        </Style>

        <Style x:Key="BatteryPersent" TargetType="TextBlock" BasedOn="{StaticResource TextBase}">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="DeviceDetail" TargetType="TextBlock" BasedOn="{StaticResource TextBase}">
            <Setter Property="Foreground" Value="{DynamicResource TextSubBrush}" />
        </Style>

        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="32" />
            <Setter Property="BorderBrush" Value="{DynamicResource AccentLight1Brush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Background" Value="{DynamicResource AccentLight1Brush}" />
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border 
                            Background="{TemplateBinding BorderBrush}"
                            Padding="{TemplateBinding BorderThickness}">
                            
                            <Border Background="{TemplateBinding Background}">

                                <ContentPresenter
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>

                            </Border>
                            
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush">
                        <Setter.Value>
                            <MultiBinding Converter="{StaticResource BrightnessBrushFilterConverter}">
                                <Binding Source="{StaticResource AccentLight1BrushProxy}" Path="Data" />
                                <Binding>
                                    <Binding.Source>
                                        <sys:Double>1.2</sys:Double>
                                    </Binding.Source>
                                </Binding>
                            </MultiBinding>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Button.Resources>

    <Border Style="{StaticResource DeviceBorder}">
        <StackPanel>

            <Border Style="{StaticResource LineBorder}">
                <Grid Style="{StaticResource LineGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid 
                        Style="{StaticResource DeviceIconGrid}"
                        Grid.Column="0"></Grid>

                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock 
                            Style="{StaticResource DeviceName}"
                            Grid.Row="0"
                            Grid.Column="0">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource EmptyRollbackConverter}">
                                    <Binding Path="Device.Name" RelativeSource="{RelativeSource AncestorType=local:DeviceItem}" />
                                    <Binding Source="Unknown Device" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>

                        <TextBlock
                            Style="{StaticResource ConnectState}"
                            Grid.Row="1"
                            Grid.Column="0">

                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource ConnectionStateToTextConverter}">
                                    <Binding Path="Device" RelativeSource="{RelativeSource AncestorType=local:DeviceItem}" />
                                    <Binding Path="IsPaired" RelativeSource="{RelativeSource AncestorType=local:DeviceItem}" />
                                </MultiBinding>
                            </TextBlock.Text>
                            
                        </TextBlock>
                    </Grid>

                    <Grid 
                        Style="{StaticResource BatteryGrid}"
                        Grid.Column="2">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid 
                            Style="{StaticResource BatteryIconGrid}"
                            Grid.Row="0"
                            Grid.Column="2"></Grid>

                        <TextBlock
                            Style="{StaticResource BatteryPersent}"
                            Text="{Binding Device.BatteryLevel, RelativeSource={RelativeSource AncestorType=local:DeviceItem}, StringFormat='{}{0:0}%'}"
                            Grid.Row="1"
                            Grid.Column="2"/>
                    </Grid>

                </Grid>
            </Border>

            <Border x:Name="DetailsBorder" Style="{StaticResource DetailLineBorder}">
                <Grid Style="{StaticResource LineGrid}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel 
                        Orientation="Vertical" 
                        Grid.Column="0">
                        
                        <TextBlock Style="{StaticResource DeviceDetail}" Text="{Binding Device.LastSeen, RelativeSource={RelativeSource AncestorType=local:DeviceItem}, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"  />
                        <TextBlock Style="{StaticResource DeviceDetail}">
                            <Run Text="{Binding Device.Address, RelativeSource={RelativeSource AncestorType=local:DeviceItem}, Mode=OneWay}" />
                            <Run Text=" | " />
                            <Run>
                                <Run.Text>
                                    <MultiBinding Converter="{StaticResource FormattedStringConverter}">
                                        <Binding Path="Device.Rssi" RelativeSource="{RelativeSource AncestorType=local:DeviceItem}" />
                                        <Binding Path="." Source="" />
                                        <Binding Path="." Source="{}{0} dBm" />
                                        <Binding Path="." Source="---" />
                                    </MultiBinding>
                                </Run.Text>
                            </Run>
                        </TextBlock>
                        
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal"
                        Grid.Column="1">

                        <Button Style="{StaticResource ControlButton}" Content="Connect">
                            <Button.Visibility>
                                <MultiBinding Converter="{StaticResource ConnectionActionVisibilityConverter}" ConverterParameter="Connect">
                                    <Binding Path="Device" RelativeSource="{RelativeSource AncestorType=local:DeviceItem}" />
                                    <Binding Path="IsPaired" RelativeSource="{RelativeSource AncestorType=local:DeviceItem}" />
                                </MultiBinding>
                            </Button.Visibility>
                        </Button>
                        <Button Style="{StaticResource ControlButton}" Content="Disconnect">
                            <Button.Visibility>
                                <MultiBinding Converter="{StaticResource ConnectionActionVisibilityConverter}" ConverterParameter="Disconnect">
                                    <Binding Path="Device" RelativeSource="{RelativeSource AncestorType=local:DeviceItem}" />
                                    <Binding Path="IsPaired" RelativeSource="{RelativeSource AncestorType=local:DeviceItem}" />
                                </MultiBinding>
                            </Button.Visibility>
                        </Button>
                        <Button Style="{StaticResource ControlButton}" Content="Pair">
                            <Button.Visibility>
                                <MultiBinding Converter="{StaticResource ConnectionActionVisibilityConverter}" ConverterParameter="Pair">
                                    <Binding Path="Device" RelativeSource="{RelativeSource AncestorType=local:DeviceItem}" />
                                    <Binding Path="IsPaired" RelativeSource="{RelativeSource AncestorType=local:DeviceItem}" />
                                </MultiBinding>
                            </Button.Visibility>
                        </Button>
                        <Button Style="{StaticResource ControlButton}" Content="Remove">
                            <Button.Visibility>
                                <MultiBinding Converter="{StaticResource ConnectionActionVisibilityConverter}" ConverterParameter="Remove">
                                    <Binding Path="Device" RelativeSource="{RelativeSource AncestorType=local:DeviceItem}" />
                                    <Binding Path="IsPaired" RelativeSource="{RelativeSource AncestorType=local:DeviceItem}" />
                                </MultiBinding>
                            </Button.Visibility>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>
    </Border>

</Button>
