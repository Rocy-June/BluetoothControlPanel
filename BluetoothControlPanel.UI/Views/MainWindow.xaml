<Window 
    x:Class="BluetoothControlPanel.UI.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BluetoothControlPanel.Application.ViewModels;assembly=BluetoothControlPanel.Application"
    xmlns:ctrl="clr-namespace:BluetoothControlPanel.UI.Controls"
    xmlns:bt="clr-namespace:BluetoothControlPanel.Domain.Bluetooth;assembly=BluetoothControlPanel.Domain"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vm:MainViewModel,IsDesignTimeCreatable=False}"
    Focusable="True"
    Height="600" Width="420"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="Manual"
    Visibility="Collapsed"
    x:Name="MainWindowRoot">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Activated">
            <b:InvokeCommandAction Command="{Binding ShownCommand}" />
        </b:EventTrigger>
        <b:EventTrigger EventName="Deactivated">
            <b:InvokeCommandAction Command="{Binding HideCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Window.Resources>

        <Storyboard x:Key="ShowWindowStoryboard">
            <DoubleAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" 
                             To="1" Duration="0:0:0.1" />
            <DoubleAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" 
                             To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="PairedList" Storyboard.TargetProperty="Opacity" 
                             To="1" 
                             BeginTime="0:0:0.15" Duration="0:0:0.3" />
            <DoubleAnimation Storyboard.TargetName="PairedList" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" 
                             To="0" 
                             BeginTime="0:0:0.15" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="AvailableList" Storyboard.TargetProperty="Opacity" 
                             To="1" 
                             BeginTime="0:0:0.15" Duration="0:0:0.3" />
            <DoubleAnimation Storyboard.TargetName="AvailableList" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" 
                             To="0" 
                             BeginTime="0:0:0.15" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="HideWindowStoryboard">
            <DoubleAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.05" />
            <DoubleAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" 
                             To="50" Duration="0:0:0.05" />
            <DoubleAnimation Storyboard.TargetName="PairedList" Storyboard.TargetProperty="Opacity" To="0" BeginTime="0:0:0.05" Duration="0:0:0" />
            <DoubleAnimation Storyboard.TargetName="PairedList" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" 
                             To="50" BeginTime="0:0:0.05" Duration="0:0:0" />
            <DoubleAnimation Storyboard.TargetName="AvailableList" Storyboard.TargetProperty="Opacity" To="0" BeginTime="0:0:0.05" Duration="0:0:0" />
            <DoubleAnimation Storyboard.TargetName="AvailableList" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" 
                             To="50" BeginTime="0:0:0.05" Duration="0:0:0" />
        </Storyboard>

        <DataTemplate DataType="{x:Type bt:DeviceInfo}">
            <ctrl:DeviceItem Device="{Binding}" />
        </DataTemplate>

        <Style x:Key="MainWindowBorder" TargetType="Border" BasedOn="{StaticResource WindowBorder}">
            <Setter Property="Padding" Value="0,15,0,0" />
            <Setter Property="Opacity" Value="0" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AnimateContent" TargetType="Control">
            <Setter Property="Opacity" Value="0" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform Y="50"/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeivceListTitle" TargetType="TextBlock" BasedOn="{StaticResource TextBase}">
            <Setter Property="Padding" Value="10,5,10,10" />
            <Setter Property="FontSize" Value="12pt" />
        </Style>

        <Style x:Key="BottomGrid" TargetType="Grid">

        </Style>

        <Style x:Key="GotoSettingText" TargetType="TextBlock" BasedOn="{StaticResource TextBase}">
            <Setter Property="Margin" Value="10" />
        </Style>

        <Style x:Key="ControllerStackPanel" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal" />
        </Style>

        <Style x:Key="ControllerButton" TargetType="Button">
            <Setter Property="Margin" Value="4,0,0,4" />
        </Style>

    </Window.Resources>

    <Border x:Name="Root" Style="{StaticResource MainWindowBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollViewer
                VerticalScrollBarVisibility="Auto"
                Grid.Row="0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock 
                        Style="{StaticResource DeivceListTitle}"
                        Text="Paired Devices"
                        Grid.Row="0"/>

                    <ItemsControl
                        x:Name="PairedList"
                        Style="{StaticResource AnimateContent}"
                        ItemsSource="{Binding PairedDevices}"
                        Grid.Row="1">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ctrl:DeviceItem 
                                    Device="{Binding}"
                                    IsPaired="True" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                    </ItemsControl>

                    <TextBlock 
                        Style="{StaticResource DeivceListTitle}"
                        Text="Available Devices"
                        Grid.Row="2"/>

                    <ItemsControl 
                        x:Name="AvailableList"
                        Style="{StaticResource AnimateContent}"
                        ItemsSource="{Binding AvailableDevices}"
                        Grid.Row="3">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ctrl:DeviceItem 
                                    Device="{Binding}"
                                    IsPaired="False" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                    </ItemsControl>
                </Grid>
            </ScrollViewer>

            <Grid 
                Style="{StaticResource BottomGrid}"
                Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock
                    Style="{StaticResource GotoSettingText}"
                    Grid.Row="0">
                    
                            <Hyperlink
                                FontSize="12pt"
                                Foreground="{DynamicResource TextBaseBrush}" 
                                Command="{Binding OpenSystemBluetoothSettingWindowCommand}">
                            <Run Text="Bluetooth settings"/>
                        </Hyperlink>
                        <LineBreak/>
                        <Run 
                            FontSize="10pt"
                            Text="Open Windows Settings to manage Bluetooth and devices" 
                            Foreground="{DynamicResource TextSubBrush}"/>

                </TextBlock>

                <StackPanel
                    Style="{StaticResource ControllerStackPanel}"
                    Grid.Row="1">

                    <Button
                        Style="{StaticResource ControllerButton}"
                        Content="Bluetooth"
                        Command="{Binding SwitchBluetoothOpenStateCommand}"/>

                    <Button 
                        Style="{StaticResource ControllerButton}"
                        Content="Debug" 
                        Command="{Binding OpenDebugWindowCommand}"/>

                </StackPanel>

            </Grid>

        </Grid>
    </Border>
</Window>
