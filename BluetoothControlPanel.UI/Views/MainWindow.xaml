<Window 
    x:Class="BluetoothControlPanel.UI.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BluetoothControlPanel.Application.ViewModels;assembly=BluetoothControlPanel.Application"
    xmlns:ctrl="clr-namespace:BluetoothControlPanel.UI.Controls"
    xmlns:bt="clr-namespace:BluetoothControlPanel.Domain.Bluetooth;assembly=BluetoothControlPanel.Domain"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vm:MainViewModel,IsDesignTimeCreatable=False}"
    Focusable="True"
    Height="600" Width="420"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    ShowInTaskbar="True"
    Topmost="True"
    WindowStartupLocation="Manual"
    Visibility="Hidden"
    x:Name="MainWindowRoot">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Activated">
            <b:InvokeCommandAction Command="{Binding ShownCommand}" />
        </b:EventTrigger>
        <b:EventTrigger EventName="Deactivated">
            <b:InvokeCommandAction Command="{Binding HideCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Window.Resources>

        <Storyboard x:Key="ShowWindowStoryboard">
            <DoubleAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.18" />
            <DoubleAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="RenderTransform.ScaleX" From="0.95" To="1" Duration="0:0:0.18" />
            <DoubleAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="RenderTransform.ScaleY" From="0.95" To="1" Duration="0:0:0.18" />
        </Storyboard>

        <Storyboard x:Key="HideWindowStoryboard">
            <DoubleAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.14" />
            <DoubleAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="RenderTransform.ScaleX" From="1" To="0.95" Duration="0:0:0.14" />
            <DoubleAnimation Storyboard.TargetName="Root" Storyboard.TargetProperty="RenderTransform.ScaleY" From="1" To="0.95" Duration="0:0:0.14" />
        </Storyboard>

        <DataTemplate DataType="{x:Type bt:DeviceInfo}">
            <ctrl:DeviceItem Device="{Binding}" />
        </DataTemplate>

        <Style x:Key="MainWindowBorder" TargetType="Border" BasedOn="{StaticResource WindowBorder}">
            <Setter Property="Padding" Value="0,15,0,0" />
        </Style>

        <Style x:Key="DeivceListTitle" TargetType="TextBlock" BasedOn="{StaticResource TextBase}">
            <Setter Property="Padding" Value="10,5,10,10" />
            <Setter Property="FontSize" Value="12pt" />
        </Style>

    </Window.Resources>

    <Border x:Name="Root" Style="{StaticResource MainWindowBorder}">
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1" />
        </Border.RenderTransform>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock 
                        Style="{StaticResource DeivceListTitle}"
                        Text="Your devices"
                        Grid.Row="0"/>

                    <ItemsControl 
                        ItemsSource="{Binding PairedDevices}"
                        Grid.Row="1">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ctrl:DeviceItem 
                                    Device="{Binding}"
                                    IsPaired="True" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                    </ItemsControl>

                    <TextBlock 
                        Style="{StaticResource DeivceListTitle}"
                        Text="New devices"
                        Grid.Row="2"/>

                    <ItemsControl 
                        ItemsSource="{Binding AvailableDevices}"
                        Grid.Row="3">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ctrl:DeviceItem 
                                    Device="{Binding}"
                                    IsPaired="False" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                    </ItemsControl>
                </Grid>
            </ScrollViewer>

            <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center" Margin="8">

                <Button 
                    Content="Debug" 
                    Command="{Binding OpenDebugWindowCommand}" 
                    Padding="12,6" 
                    Margin="10,0,0,0" />

            </StackPanel>
            
        </Grid>
    </Border>
</Window>
