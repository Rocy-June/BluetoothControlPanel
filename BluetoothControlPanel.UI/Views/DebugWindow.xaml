<Window x:Class="BluetoothControlPanel.UI.Views.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BluetoothControlPanel.UI.ViewModels"
        mc:Ignorable="d"
        Title="Debug Window"
        Height="450"
        Width="800"
        MinHeight="400"
        MinWidth="600"
        Background="{DynamicResource BackgroundBrush}"
        d:DataContext="{d:DesignInstance vm:DebugViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>

        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBase}">
            <Setter Property="Foreground" Value="#000" />
        </Style>
        
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,2">
            <Button Content="Refresh status"
                    Command="{Binding RefreshStatusCommand}"
                    Padding="12,6" />
            <TextBlock Text="{Binding StatusMessage}"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
        </StackPanel>

        <GroupBox Grid.Row="1" Header="Activity">
            <ListBox ItemsSource="{Binding LogEntries}" Background="{DynamicResource BackgroundBrush}" />
        </GroupBox>
    </Grid>
    
</Window>
