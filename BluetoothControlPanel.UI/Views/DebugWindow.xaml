<Window x:Class="BluetoothControlPanel.UI.Views.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BluetoothControlPanel.Application.ViewModels;assembly=BluetoothControlPanel.Application"
        mc:Ignorable="d"
        Title="Debug Window"
        Height="450"
        Width="800"
        MinHeight="400"
        MinWidth="600"
        Background="{DynamicResource AccentDark1Brush}"
        d:DataContext="{d:DesignInstance vm:DebugViewModel, IsDesignTimeCreatable=False}">

    <Window.Resources>

        <Style TargetType="TextBlock" BasedOn="{StaticResource TextBase}">
            <Setter Property="Foreground" Value="#000" />
        </Style>
        
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GroupBox Header="Activity">
            <ListBox ItemsSource="{Binding LogEntries}" Background="{DynamicResource AccentDark1Brush}" />
        </GroupBox>
    </Grid>
    
</Window>
