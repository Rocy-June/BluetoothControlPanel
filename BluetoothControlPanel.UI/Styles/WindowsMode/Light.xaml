<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="TextBaseBrush" Color="#000000" />

    <Style x:Key="TextBase" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBaseBrush}" />
        <!--<Setter Property="" Value="Red" />-->
    </Style>

    <Style TargetType="TextBlock" BasedOn="{StaticResource TextBase}"/>

</ResourceDictionary>
