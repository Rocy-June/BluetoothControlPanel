<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:syswin="clr-namespace:System.Windows;assembly=PresentationFramework">

    <!--<Color 
        x:Key="BackgroundColor"
        A="{x:Static syswin:SystemColors.AccentColorDark1}"/>-->

    <SolidColorBrush x:Key="BackgroundBrush" Color="{x:Static syswin:SystemColors.AccentColorDark1}" />
    <SolidColorBrush x:Key="BackgroundHoverBrush" Color="{x:Static syswin:SystemColors.AccentColorLight1}" />
    <SolidColorBrush x:Key="BackgroundActiveBrush" Color="{x:Static syswin:SystemColors.AccentColor}" />

</ResourceDictionary>
