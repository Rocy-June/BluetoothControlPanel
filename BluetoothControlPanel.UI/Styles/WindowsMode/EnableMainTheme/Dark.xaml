<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:syswin="clr-namespace:System.Windows;assembly=PresentationFramework">

    <SolidColorBrush x:Key="AccentBrush" Color="{x:Static syswin:SystemColors.AccentColor}" />
    <SolidColorBrush x:Key="AccentDark1Brush" Color="{x:Static syswin:SystemColors.AccentColorDark1}" />
    <SolidColorBrush x:Key="AccentDark2Brush" Color="{x:Static syswin:SystemColors.AccentColorDark2}" />
    <SolidColorBrush x:Key="AccentDark3Brush" Color="{x:Static syswin:SystemColors.AccentColorDark3}" />
    <SolidColorBrush x:Key="AccentLight1Brush" Color="{x:Static syswin:SystemColors.AccentColorLight1}" />
    <SolidColorBrush x:Key="AccentLight2Brush" Color="{x:Static syswin:SystemColors.AccentColorLight2}" />
    <SolidColorBrush x:Key="AccentLight3Brush" Color="{x:Static syswin:SystemColors.AccentColorLight3}" />

</ResourceDictionary>
